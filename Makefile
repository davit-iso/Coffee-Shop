# –ö–æ–º–ø–∏–ª—è—Ç–æ—Ä
CXX = g++

# –§–ª–∞–≥–∏ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏
CXXFLAGS = -Wall -Wextra -I./headers

# –ü—É—Ç—å –∫ –∏—Å—Ö–æ–¥–Ω–∏–∫–∞–º
SRC_DIR = src

# –ò—Å—Ö–æ–¥–Ω—ã–µ —Ñ–∞–π–ª—ã
SRCS = $(wildcard $(SRC_DIR)/*.cpp)

# –¶–µ–ª—å
TARGET = out

# –¶–≤–µ—Ç–∞
GREEN = \033[0;32m
NC = \033[0m

# –°–±–æ—Ä–∫–∞ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
all: $(TARGET)

# –ö–æ–º–ø–∏–ª—è—Ü–∏—è –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
$(TARGET):
	@echo "üîß –ö–æ–º–ø–∏–ª—è—Ü–∏—è –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è..."
	$(CXX) $(CXXFLAGS) $(SRCS) -o $@
	@echo "$(GREEN)‚úÖ –°–æ–±—Ä–∞–Ω–æ: $(TARGET)$(NC)"

# –û—á–∏—Å—Ç–∫–∞
clean:
	@echo "üßπ –û—á–∏—Å—Ç–∫–∞..."
	@rm -f $(TARGET)
	@echo "$(GREEN)‚úÖ –û—á–∏—Å—Ç–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞$(NC)"

.PHONY: all clean
